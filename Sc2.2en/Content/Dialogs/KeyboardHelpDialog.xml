<CanvasWidget xmlns="runtime-namespace:Game">

  <CanvasWidget Size="620, 420" ClampToBounds="true" HorizontalAlignment="Center" VerticalAlignment="Center">
    <RectangleWidget FillColor="0, 0, 0, 255" OutlineColor="128, 128, 128, 128" OutlineThickness="2" />
    <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Near" Margin="0, 15">

      <LabelWidget  Text="Keyboard Controls" HorizontalAlignment="Center"/>

      <CanvasWidget Margin="20, 15">

        <RectangleWidget FillColor="0, 0, 0, 0" OutlineColor="128, 128, 128, 128" OutlineThickness="1" />

        <ScrollPanelWidget Margin="4, 4" Direction="Vertical">

          <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center">

            <StackPanelWidget Direction="Vertical">
              <LabelWidget Text="W/A/S/D"  HorizontalAlignment="Center" />
              <LabelWidget Text="Mouse Move"  HorizontalAlignment="Center" />
              <LabelWidget Text="Space"  HorizontalAlignment="Center" />
              <LabelWidget Text="Shift"  HorizontalAlignment="Center" />
              <LabelWidget Text="E"  HorizontalAlignment="Center" />
              <LabelWidget Text="C"  HorizontalAlignment="Center" />
              <LabelWidget Text="Q"  HorizontalAlignment="Center" />
              <LabelWidget Text="V"  HorizontalAlignment="Center" />
              <LabelWidget Text="R"  HorizontalAlignment="Center" />
              <LabelWidget Text="G"  HorizontalAlignment="Center" />
              <LabelWidget Text="P"  HorizontalAlignment="Center" />
              <LabelWidget Text="T"  HorizontalAlignment="Center" />
              <LabelWidget Text="L"  HorizontalAlignment="Center" />
              <LabelWidget Text="1 to 6"  HorizontalAlignment="Center" />
              <LabelWidget Text="2xSpace or F"  HorizontalAlignment="Center" />
              <LabelWidget Text="Space/Shift"  HorizontalAlignment="Center" />
              <LabelWidget Text="Left Mouse Click"  HorizontalAlignment="Center" />
              <LabelWidget Text="Right Mouse Click"  HorizontalAlignment="Center" />
              <LabelWidget Text="Left Mouse Drag"  HorizontalAlignment="Center" />
              <LabelWidget Text="Right Mouse Drag"  HorizontalAlignment="Center" />
              <LabelWidget Text="Left Mouse Hold"  HorizontalAlignment="Center" />
              <LabelWidget Text="Shift + Left Mouse Click"  HorizontalAlignment="Center" />
              <LabelWidget Text="Mouse Wheel"  HorizontalAlignment="Center" />
              <LabelWidget Text="Escape"  HorizontalAlignment="Center" />
            </StackPanelWidget>

            <CanvasWidget Size="16, 0" />

            <StackPanelWidget Direction="Vertical">
              <LabelWidget Text="movement"  Color="160, 160, 160" />
              <LabelWidget Text="looking"  Color="160, 160, 160" />
              <LabelWidget Text="jump"  Color="160, 160, 160"/>
              <LabelWidget Text="toggle sneaking"  Color="160, 160, 160"/>
              <LabelWidget Text="open inventory panel"  Color="160, 160, 160" />
              <LabelWidget Text="open body panel"  Color="160, 160, 160" />
              <LabelWidget Text="drop active item"  Color="160, 160, 160" />
              <LabelWidget Text="change camera mode"  Color="160, 160, 160" />
              <LabelWidget Text="mount creature or vehicle"  Color="160, 160, 160" />
              <LabelWidget Text="edit block or item"  Color="160, 160, 160" />
              <LabelWidget Text="take screenshot"  Color="160, 160, 160" />
              <LabelWidget Text="change time of day (creative)"  Color="160, 160, 160" />
              <LabelWidget Text="summon lightning (creative)"  Color="160, 160, 160" />
              <LabelWidget Text="select inventory slot"  Color="160, 160, 160" />
              <LabelWidget Text="toggle fly mode (creative)"  Color="160, 160, 160" />
              <LabelWidget Text="fly up/down (creative)"  Color="160, 160, 160" />
              <LabelWidget Text="dig, attack, aim"  Color="160, 160, 160" />
              <LabelWidget Text="place block, use, interact"  Color="160, 160, 160" />
              <LabelWidget Text="move all items"  Color="160, 160, 160" />
              <LabelWidget Text="move a single item"  Color="160, 160, 160" />
              <LabelWidget Text="mark stack for splitting"  Color="160, 160, 160" />
              <LabelWidget Text="auto move inventory item"  Color="160, 160, 160" />
              <LabelWidget Text="scroll, change inventory slot"  Color="160, 160, 160" />
              <LabelWidget Text="show game menu"  Color="160, 160, 160" />
            </StackPanelWidget>
          </StackPanelWidget>

        </ScrollPanelWidget>

      </CanvasWidget>

      <StackPanelWidget HorizontalAlignment="Center">
        <BevelledButtonWidget Name="OkButton" Text="OK" Style="{Styles/ButtonStyle_160x60}"  />
        <CanvasWidget Size="40, 0" />
        <BevelledButtonWidget Name="HelpButton" Text="Help" Style="{Styles/ButtonStyle_160x60}" />
      </StackPanelWidget>
      
    </StackPanelWidget>

  </CanvasWidget>
</CanvasWidget>
